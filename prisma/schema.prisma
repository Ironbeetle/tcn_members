// Prisma schema for cPanel member activation backend

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["fnmemberlist", "tcnbulletin", "governance"]
}

enum ActivationStatus {
  NONE
  PENDING
  ACTIVATED
  
  @@schema("fnmemberlist")
}

model fnmember {
  id             String           @id @default(cuid())
  created        DateTime         @default(now())
  updated        DateTime         @default(now()) @updatedAt
  birthdate      DateTime         @db.Date
  first_name     String
  last_name      String
  t_number       String           @unique
  activated      ActivationStatus @default(NONE)
  deceased       String?
  auth           fnauth? 
  profile        Profile[]
  barcode        Barcode[]
  family         Family[]
  form_submissions form_submission[]
  signup_submissions signup_submission[]
  
  @@schema("fnmemberlist")
}

model Profile {
  id           String    @id @default(cuid())
  created      DateTime  @default(now())
  updated      DateTime  @default(now()) @updatedAt
  gender       String?
  o_r_status   String
  community    String
  address      String
  phone_number String
  email        String
  image_url    String?
  fnmemberId   String?
  fnmember     fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  
  @@schema("fnmemberlist")
}

model Barcode {
  id         String    @id @default(cuid())
  created    DateTime  @default(now())
  updated    DateTime  @default(now()) @updatedAt
  barcode    String
  activated  Int       @default(1)  
  fnmemberId String?
  fnmember   fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  
  @@schema("fnmemberlist")
}

model Family {
  id            String    @id @default(cuid())
  created       DateTime  @default(now())
  updated       DateTime  @default(now()) @updatedAt
  spouse_fname  String?
  spouse_lname  String?
  dependents    Int       @default(0)
  fnmemberId    String?
  fnmember      fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  
  @@schema("fnmemberlist")
}

model fnauth {
  id                String     @id @default(cuid())
  created           DateTime   @default(now())
  updated           DateTime   @default(now()) @updatedAt
  username          String     @unique
  email             String     @unique
  password          String
  verified          Boolean    @default(false)
  
  // Password reset fields
  resetToken        String?    @unique
  resetTokenExpiry  DateTime?
  pin               String?
  pinExpiresAt      DateTime?
  
  // Security fields
  lastLogin         DateTime?
  loginAttempts     Int        @default(0)
  lockedUntil       DateTime?
  
  // Relations
  fnmemberId        String     @unique
  fnmember          fnmember   @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  
  @@schema("fnmemberlist")
}

model bulletin {
  id            String     @id @default(cuid())
  created       DateTime   @default(now())
  updated       DateTime   @default(now()) @updatedAt
  title         String
  subject       String
  poster_url    String
  category      Categories @default(CHIEFNCOUNCIL)
  // Fields for sync with messaging app
  sourceId      String?    @unique  // ID from the messaging app (BulletinApiLog.id)
  userId        String?              // User ID from messaging app who created it
  @@schema("tcnbulletin")
}

enum Categories{
  CHIEFNCOUNCIL
  HEALTH
  EDUCATION
  RECREATION
  EMPLOYMENT
  PROGRAM_EVENTS
  ANNOUNCEMENTS
  @@schema("tcnbulletin")
}

model fillable_form {
  id            String           @id @default(cuid())
  created       DateTime         @default(now())
  updated       DateTime         @default(now()) @updatedAt
  title         String
  description   String?
  category      FormCategory     @default(GENERAL)
  pdf_url       String           // Path to the PDF template
  form_fields   Json             // JSON array of form field definitions
  is_active     Boolean          @default(true)
  submissions   form_submission[]

  @@schema("tcnbulletin")
}

model form_submission {
  id            String         @id @default(cuid())
  created       DateTime       @default(now())
  updated       DateTime       @default(now()) @updatedAt
  form_data     Json           // Submitted form field values
  filled_pdf_url String?       // Path to the generated filled PDF
  status        SubmissionStatus @default(PENDING)
  
  // Relations
  formId        String
  form          fillable_form  @relation(fields: [formId], references: [id], onDelete: Cascade)
  fnmemberId    String
  fnmember      fnmember       @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("tcnbulletin")
}

enum FormCategory {
  GENERAL
  HEALTH
  EDUCATION
  HOUSING
  EMPLOYMENT
  RECREATION
  SOCIAL_SERVICES
  CHIEFNCOUNCIL
  PROGRAM_EVENTS
  ANNOUNCEMENTS
  @@schema("tcnbulletin")
}

enum SubmissionStatus {
  PENDING
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  REJECTED
  @@schema("tcnbulletin")
}

// ==================== SIGNUP FORMS (Synced from TCN_COMM) ====================

model signup_form {
  id            String           @id @default(cuid())
  created       DateTime         @default(now())
  updated       DateTime         @default(now()) @updatedAt
  tcn_form_id   String           @unique  // ID from TCN_COMM (the source)
  title         String
  description   String?
  deadline      DateTime?
  max_entries   Int?
  is_active     Boolean          @default(true)
  category      FormCategory     @default(GENERAL)
  created_by    String?          // Department name from TCN_COMM
  fields        Json             // JSON array of field definitions
  submissions   signup_submission[]

  @@index([is_active])
  @@index([deadline])
  @@schema("tcnbulletin")
}

model signup_submission {
  id            String         @id @default(cuid())
  created       DateTime       @default(now())
  updated       DateTime       @default(now()) @updatedAt
  responses     Json           // Submitted form field values
  synced_to_tcn Boolean        @default(false)
  sync_attempts Int            @default(0)
  last_sync_error String?
  
  // Relations
  formId        String
  form          signup_form    @relation(fields: [formId], references: [id], onDelete: Cascade)
  fnmemberId    String
  fnmember      fnmember       @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@unique([formId, fnmemberId])  // One submission per member per form
  @@schema("tcnbulletin")
}

// ==================== Chief & Council ====================

model Current_Council{
  id          String        @id @default(cuid())
  created     DateTime      @default(now())
  updated     DateTime      @default(now()) @updatedAt
  council_start DateTime  
  council_end   DateTime
  members Council_Member[]
  history Council_History[]
   // Fields for sync with master database
  sourceId    String?       @unique  // ID from the master database
  @@schema("governance")
}

model Council_Member{
  id          String        @id @default(cuid())
  created     DateTime      @default(now())
  updated     DateTime      @default(now()) @updatedAt
  position    Positions     @default(CHIEF)
  first_name  String
  last_name   String
  portfolios  Portfolios[]  // Array of portfolios (up to 4)
  email       String
  phone       String
  bio         String?
  image_url   String?       // URL to profile photo
  councilId   String?
  Current_Council Current_Council? @relation(fields: [councilId], references: [id], onDelete: Cascade)
  @@schema("governance")
}

enum Positions{
  CHIEF
  COUNCILLOR
  @@schema("governance")
}

enum Portfolios{
  TREATY
  HEALTH
  EDUCATION
  HOUSING
  ECONOMIC_DEVELOPMENT
  ENVIRONMENT
  PUBLIC_SAFETY
  @@schema("governance")
}

model Council_History{
  id          String        @id @default(cuid())
  created     DateTime      @default(now())
  updated     DateTime      @default(now()) @updatedAt
  council_start DateTime  
  council_end   DateTime
  councilId   String?
  Current_Council Current_Council? @relation(fields: [councilId], references: [id], onDelete: Cascade)
  @@schema("governance")
}