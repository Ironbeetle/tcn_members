generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["barcode", "fnmemberlist", "governance", "msgmanager", "tcnbulletin"]
}


model fnmember {
  id                 String              @id @default(cuid())
  created            DateTime            @default(now())
  updated            DateTime            @default(now()) @updatedAt
  birthdate          DateTime            @db.Date
  first_name         String
  last_name          String
  t_number           String              @unique
  activated          ActivationStatus    @default(NONE)
  deceased           String?
  barcode            Barcode[]
  family             Family[]
  profile            Profile[]
  auth               fnauth?
  form_submissions   form_submission[]
  signup_submissions signup_submission[]

  @@schema("fnmemberlist")
}

model Profile {
  id           String    @id @default(cuid())
  created      DateTime  @default(now())
  updated      DateTime  @default(now()) @updatedAt
  gender       String?
  o_r_status   String
  community    String
  address      String
  phone_number String
  province     ProvinceTerritory @default(MB)
  email        String
  image_url    String?
  fnmemberId   String?
  fnmember     fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}


enum ProvinceTerritory{
  AB
  BC
  MB
  NB
  NL
  NS
  NT
  NU
  ON
  PE
  QC
  SK
  YT
  @@schema("fnmemberlist")
}

model Barcode {
  id         String    @id @default(cuid())
  created    DateTime  @default(now())
  updated    DateTime  @default(now()) @updatedAt
  barcode    String    @unique
  activated  Int       @default(1)
  fnmemberId String?
  fnmember   fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}

model Family {
  id           String    @id @default(cuid())
  created      DateTime  @default(now())
  updated      DateTime  @default(now()) @updatedAt
  spouse_fname String?
  spouse_lname String?
  dependents   Int       @default(0)
  fnmemberId   String?
  fnmember     fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}

model fnauth {
  id               String    @id @default(cuid())
  created          DateTime  @default(now())
  updated          DateTime  @default(now()) @updatedAt
  username         String    @unique
  email            String    @unique
  password         String
  verified         Boolean   @default(false)
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  pin              String?
  pinExpiresAt     DateTime?
  lastLogin        DateTime?
  loginAttempts    Int       @default(0)
  lockedUntil      DateTime?
  fnmemberId       String    @unique
  fnmember         fnmember  @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}

// Communincations 

model bulletin {
  id         String     @id @default(cuid())
  created    DateTime   @default(now())
  updated    DateTime   @default(now()) @updatedAt
  title      String
  subject    String
  poster_url String
  category   Categories @default(CHIEFNCOUNCIL)
  sourceId   String?    @unique
  userId     String?

  @@schema("tcnbulletin")
}

model fillable_form {
  id          String            @id @default(cuid())
  created     DateTime          @default(now())
  updated     DateTime          @default(now()) @updatedAt
  title       String
  description String?
  category    FormCategory      @default(GENERAL)
  pdf_url     String
  form_fields Json
  is_active   Boolean           @default(true)
  submissions form_submission[]

  @@schema("tcnbulletin")
}

model form_submission {
  id             String           @id @default(cuid())
  created        DateTime         @default(now())
  updated        DateTime         @default(now()) @updatedAt
  form_data      Json
  filled_pdf_url String?
  status         SubmissionStatus @default(PENDING)
  formId         String
  fnmemberId     String
  fnmember       fnmember         @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  form           fillable_form    @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@schema("tcnbulletin")
}

model signup_form {
  id              String           @id @default(cuid())
  created         DateTime         @default(now())
  updated         DateTime         @default(now()) @updatedAt
  tcn_form_id     String           @unique  // ID from TCN_COMM (the source)
  title           String
  description     String?
  deadline        DateTime?
  max_entries     Int?
  is_active       Boolean          @default(true)
  category        FormCategory     @default(GENERAL)
  created_by      String?          // Department name from TCN_COMM
  fields          Json             // JSON array of field definitions
  allow_resubmit  Boolean          @default(false) // Allow members to resubmit (for recurring programs)
  resubmit_message String?         // Custom message for resubmissions
  submissions     signup_submission[]

  @@index([is_active])
  @@index([deadline])
  @@index([category])
  @@schema("tcnbulletin")
}

model signup_submission {
  id              String      @id @default(cuid())
  created         DateTime    @default(now())
  updated         DateTime    @default(now()) @updatedAt
  responses       Json
  synced_to_tcn   Boolean     @default(false)
  sync_attempts   Int         @default(0)
  last_sync_error String?
  status        SubmissionStatus @default(SUBMITTED)

  // Relations
  formId        String
  form          signup_form    @relation(fields: [formId], references: [id], onDelete: Cascade)
  fnmemberId    String
  fnmember      fnmember       @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  history       signup_submission_history[]

  @@unique([formId, fnmemberId])  // One submission per member per form
  @@schema("tcnbulletin")
}

// Track submission history for forms that allow re-submissions (recurring programs)
model signup_submission_history {
  id               String           @id @default(cuid())
  created          DateTime         @default(now())
  responses        Json             // Snapshot of responses at time of submission
  submission_cycle Int              @default(1) // Which cycle/round (e.g., 1st time, 2nd time)
  synced_to_tcn    Boolean          @default(false)
  sync_attempts    Int              @default(0)
  last_sync_error  String?
  status           SubmissionStatus @default(SUBMITTED)
  notes            String?          // Optional notes for this submission
  
  // Relations
  submissionId     String
  submission       signup_submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([created])
  @@schema("tcnbulletin")
}

// ==================== Chief & Council ====================

model Current_Council {
  id            String            @id @default(cuid())
  created       DateTime          @default(now())
  updated       DateTime          @default(now()) @updatedAt
  council_start DateTime
  council_end   DateTime
  sourceId      String?           @unique
  history       Council_History[]
  members       Council_Member[]

  @@schema("governance")
}

model Council_Member {
  id              String           @id @default(cuid())
  created         DateTime         @default(now())
  updated         DateTime         @default(now()) @updatedAt
  position        Positions        @default(CHIEF)
  first_name      String
  last_name       String
  portfolios      Portfolios[]
  email           String
  phone           String
  bio             String?
  image_url       String?
  councilId       String?
  sourceId        String?          @unique
  Current_Council Current_Council? @relation(fields: [councilId], references: [id], onDelete: Cascade)

  @@schema("governance")
}

model Council_History {
  id              String           @id @default(cuid())
  created         DateTime         @default(now())
  updated         DateTime         @default(now()) @updatedAt
  councilId       String?
  Current_Council Current_Council? @relation(fields: [councilId], references: [id], onDelete: Cascade)

  @@schema("governance")
}

model comm_User {
  id                     String                @id @default(cuid())
  email                  String                @unique
  password               String
  first_name             String
  last_name              String
  created                DateTime              @default(now())
  updated                DateTime              @default(now()) @updatedAt
  department             comm_Department       @default(BAND_OFFICE)
  role                   comm_UserRole         @default(STAFF)
  pin                    String?
  pinExpiresAt           DateTime?
  lastLogin              DateTime?
  loginAttempts          Int                   @default(0)
  lockedUntil            DateTime?
  passwordResetRequested DateTime?
  passwordResetCompleted DateTime?
  bulletin               comm_BulletinApiLog[]
  emails                 comm_EmailLog[]
  loginLogs              comm_LoginLog[]
  msgcnc                 comm_MsgCnC[]
  sessions               comm_Session[]
  smslog                 comm_SmsLog[]
  staffemail             comm_StaffEmailLog[]

  @@map("User")
  @@schema("msgmanager")
}

model comm_LoginLog {
  id         String          @id @default(cuid())
  userId     String
  loginTime  DateTime        @default(now())
  department comm_Department
  ipAddress  String?
  userAgent  String?
  success    Boolean         @default(true)
  failReason String?
  user       comm_User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("LoginLog")
  @@schema("msgmanager")
}

model comm_Session {
  id            String    @id @default(cuid())
  sessionToken  String    @unique
  userId        String
  expires       DateTime
  created       DateTime  @default(now())
  updated       DateTime  @default(now()) @updatedAt
  access_token  String?
  refresh_token String?
  user          comm_User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("Session")
  @@schema("msgmanager")
}

model comm_SmsLog {
  id         String    @id @default(cuid())
  created    DateTime  @default(now())
  updated    DateTime  @default(now()) @updatedAt
  message    String
  recipients String[]
  status     String
  messageIds String[]
  error      String?
  userId     String
  user       comm_User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("SmsLog")
  @@schema("msgmanager")
}

model comm_EmailLog {
  id          String    @id @default(cuid())
  created     DateTime  @default(now())
  updated     DateTime  @default(now()) @updatedAt
  subject     String
  message     String
  recipients  String[]
  status      String
  messageId   String?
  error       String?
  attachments Json?
  userId      String
  user        comm_User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("EmailLog")
  @@schema("msgmanager")
}

model comm_StaffEmailLog {
  id          String    @id @default(cuid())
  created     DateTime  @default(now())
  updated     DateTime  @updatedAt
  subject     String
  message     String
  recipients  String[]
  status      String
  messageId   String?
  error       String?
  attachments Json?
  userId      String
  user        comm_User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("StaffEmailLog")
  @@schema("msgmanager")
}

model comm_BulletinApiLog {
  id         String          @id @default(cuid())
  title      String
  subject    String
  poster_url String
  category   comm_Categories @default(CHIEFNCOUNCIL)
  userId     String
  created    DateTime        @default(now())
  updated    DateTime        @default(now()) @updatedAt
  User       comm_User       @relation(fields: [userId], references: [id])

  @@map("BulletinApiLog")
  @@schema("msgmanager")
}

model comm_MsgCnC {
  id          String    @id @default(cuid())
  title       String
  content     String
  priority    String
  type        String    @default("notice")
  created     DateTime  @default(now())
  expiryDate  DateTime?
  isPublished Boolean   @default(false)
  userId      String
  date        DateTime
  time        DateTime
  location    String
  User        comm_User @relation(fields: [userId], references: [id])

  @@map("MsgCnC")
  @@schema("msgmanager")
}

model comm_SignUpForm {
  id           String                @id @default(cuid())
  portalFormId String?               @unique
  title        String
  description  String?
  deadline     DateTime?
  maxEntries   Int?
  isActive     Boolean               @default(true)
  createdBy    String
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  syncedAt     DateTime?
  fields       comm_FormField[]
  submissions  comm_FormSubmission[]

  @@map("SignUpForm")
  @@schema("msgmanager")
}

model comm_FormField {
  id          String          @id @default(cuid())
  formId      String
  fieldId     String?
  label       String
  fieldType   comm_FieldType
  options     String?
  placeholder String?
  required    Boolean         @default(false)
  order       Int
  form        comm_SignUpForm @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@map("FormField")
  @@schema("msgmanager")
}

model comm_FormSubmission {
  id          String          @id @default(cuid())
  formId      String
  memberId    Int?
  name        String
  email       String?
  phone       String?
  responses   Json
  submittedAt DateTime        @default(now())
  form        comm_SignUpForm @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@map("FormSubmission")
  @@schema("msgmanager")
}

model ScanSession {
  id         String        @id @default(cuid())
  createdAt  DateTime      @default(now())
  closedAt   DateTime?
  status     SessionStatus @default(OPEN)
  name       String?
  operatorId String?
  deviceId   String?
  location   String?
  metadata   Json?
  reads      ScanRead[]

  @@index([status, createdAt])
  @@map("scan_sessions")
  @@schema("barcode")
}

model ScanRead {
  id              String       @id @default(cuid())
  sessionId       String
  readAt          DateTime     @default(now())
  rawValue        String
  normalizedValue String
  symbology       Symbology    @default(CODE128)
  outcome         ReadOutcome  @default(ACCEPTED)
  display         ScanDisplay?
  lookup          ScanLookup?
  session         ScanSession  @relation(fields: [sessionId], references: [id])

  @@index([sessionId, readAt(sort: Desc)])
  @@index([normalizedValue])
  @@map("scan_reads")
  @@schema("barcode")
}

model ScanLookup {
  id           String       @id @default(cuid())
  readId       String       @unique
  lookedUpAt   DateTime     @default(now())
  status       LookupStatus
  memberId     String?
  barcodeValue String?
  result       Json?
  durationMs   Int?
  read         ScanRead     @relation(fields: [readId], references: [id])

  @@map("scan_lookups")
  @@schema("barcode")
}

model ScanDisplay {
  id          String   @id @default(cuid())
  readId      String   @unique
  displayedAt DateTime @default(now())
  shown       Json?
  read        ScanRead @relation(fields: [readId], references: [id])

  @@map("scan_displays")
  @@schema("barcode")
}

