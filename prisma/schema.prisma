generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["barcode", "fnmemberlist", "governance", "msgmanager", "tcnbulletin"]
}


model fnmember {
  id                 String              @id @default(cuid())
  created            DateTime            @default(now())
  updated            DateTime            @default(now()) @updatedAt
  birthdate          DateTime            @db.Date
  first_name         String
  last_name          String
  t_number           String              @unique
  activated          ActivationStatus    @default(NONE)
  deceased           String?
  barcode            Barcode[]
  family             Family[]
  profile            Profile[]
  auth               fnauth?
  form_submissions   form_submission[]
  signup_submissions signup_submission[]

  @@schema("fnmemberlist")
}

model Profile {
  id           String    @id @default(cuid())
  created      DateTime  @default(now())
  updated      DateTime  @default(now()) @updatedAt
  gender       String?
  o_r_status   String
  community    String
  address      String
  phone_number String
  province     ProvinceTerritory @default(MB)
  email        String
  image_url    String?
  fnmemberId   String?
  fnmember     fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}


enum ProvinceTerritory{
  AB
  BC
  MB
  NB
  NL
  NS
  NT
  NU
  ON
  PE
  QC
  SK
  YT
  @@schema("fnmemberlist")
}

model Barcode {
  id         String    @id @default(cuid())
  created    DateTime  @default(now())
  updated    DateTime  @default(now()) @updatedAt
  barcode    String    @unique
  activated  Int       @default(1)
  fnmemberId String?
  fnmember   fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}

model Family {
  id           String    @id @default(cuid())
  created      DateTime  @default(now())
  updated      DateTime  @default(now()) @updatedAt
  spouse_fname String?
  spouse_lname String?
  dependents   Int       @default(0)
  fnmemberId   String?
  fnmember     fnmember? @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)

  @@schema("fnmemberlist")
}

model fnauth {
  id               String    @id @default(cuid())
  created          DateTime  @default(now())
  updated          DateTime  @default(now()) @updatedAt
  username         String    @unique
  email            String    @unique
  password         String
  verified         Boolean   @default(false)
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  pin              String?
  pinExpiresAt     DateTime?
  lastLogin        DateTime?
  loginAttempts    Int       @default(0)
  lockedUntil      DateTime?
  fnmemberId       String    @unique
  fnmember         fnmember  @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  webauthnCredentials WebAuthnCredential[]

  @@schema("fnmemberlist")
}

model WebAuthnCredential {
  id              String   @id @default(cuid())
  created         DateTime @default(now())
  updated         DateTime @default(now()) @updatedAt
  credentialId    String   @unique          // Base64URL encoded credential ID
  publicKey       String   @db.Text         // Base64URL encoded public key
  counter         BigInt   @default(0)      // Sign counter for replay protection
  transports      String?                   // JSON array of transports (e.g., ["internal"])
  deviceName      String?                   // User-friendly device name
  lastUsed        DateTime?
  fnauthId        String
  fnauth          fnauth   @relation(fields: [fnauthId], references: [id], onDelete: Cascade)

  @@index([fnauthId])
  @@schema("fnmemberlist")
}

// Communincations 

model bulletin {
  id         String     @id @default(cuid())
  created    DateTime   @default(now())
  updated    DateTime   @default(now()) @updatedAt
  title      String
  subject    String
  poster_url String
  category   Categories @default(CHIEFNCOUNCIL)
  sourceId   String?    @unique
  userId     String?

  @@schema("tcnbulletin")
}

model fillable_form {
  id          String            @id @default(cuid())
  created     DateTime          @default(now())
  updated     DateTime          @default(now()) @updatedAt
  title       String
  description String?
  category    FormCategory      @default(GENERAL)
  pdf_url     String
  form_fields Json
  is_active   Boolean           @default(true)
  submissions form_submission[]

  @@schema("tcnbulletin")
}

model form_submission {
  id             String           @id @default(cuid())
  created        DateTime         @default(now())
  updated        DateTime         @default(now()) @updatedAt
  form_data      Json
  filled_pdf_url String?
  status         SubmissionStatus @default(PENDING)
  formId         String
  fnmemberId     String
  fnmember       fnmember         @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  form           fillable_form    @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@schema("tcnbulletin")
}

model signup_form {
  id              String           @id @default(cuid())
  created         DateTime         @default(now())
  updated         DateTime         @default(now()) @updatedAt
  tcn_form_id     String           @unique  // ID from TCN_COMM (the source)
  title           String
  description     String?
  deadline        DateTime?
  max_entries     Int?
  is_active       Boolean          @default(true)
  category        FormCategory     @default(GENERAL)
  created_by      String?          // Department name from TCN_COMM
  fields          Json             // JSON array of field definitions
  allow_resubmit  Boolean          @default(false) // Allow members to resubmit (for recurring programs)
  resubmit_message String?         // Custom message for resubmissions
  submissions     signup_submission[]

  @@index([is_active])
  @@index([deadline])
  @@index([category])
  @@schema("tcnbulletin")
}

model signup_submission {
  id              String      @id @default(cuid())
  created         DateTime    @default(now())
  updated         DateTime    @default(now()) @updatedAt
  responses       Json
  synced_to_tcn   Boolean     @default(false)
  sync_attempts   Int         @default(0)
  last_sync_error String?
  status        SubmissionStatus @default(SUBMITTED)

  // Relations
  formId        String
  form          signup_form    @relation(fields: [formId], references: [id], onDelete: Cascade)
  fnmemberId    String
  fnmember      fnmember       @relation(fields: [fnmemberId], references: [id], onDelete: Cascade)
  history       signup_submission_history[]

  @@unique([formId, fnmemberId])  // One submission per member per form
  @@schema("tcnbulletin")
}

// Track submission history for forms that allow re-submissions (recurring programs)
model signup_submission_history {
  id               String           @id @default(cuid())
  created          DateTime         @default(now())
  responses        Json             // Snapshot of responses at time of submission
  submission_cycle Int              @default(1) // Which cycle/round (e.g., 1st time, 2nd time)
  synced_to_tcn    Boolean          @default(false)
  sync_attempts    Int              @default(0)
  last_sync_error  String?
  status           SubmissionStatus @default(SUBMITTED)
  notes            String?          // Optional notes for this submission
  
  // Relations
  submissionId     String
  submission       signup_submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([created])
  @@schema("tcnbulletin")
}

