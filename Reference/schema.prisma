generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["msgmanager"]
}

//TCN Messaging Manager
model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  first_name    String
  last_name     String
  created       DateTime       @default(now())
  updated       DateTime  @default(now()) @updatedAt
  department    Department     @default(FRONT_DESK)
  role          UserRole       @default(STAFF)
  
  // Authentication fields
  pin           String?        // 6-digit PIN for password reset
  pinExpiresAt  DateTime?      // PIN expiration time
  lastLogin     DateTime?      // Track last login
  loginAttempts Int           @default(0) // Track failed login attempts
  lockedUntil   DateTime?     // Account lockout until this time
  
  // Password reset tracking
  passwordResetRequested DateTime?
  passwordResetCompleted DateTime?

  emails        EmailLog[]
  staffemail    StaffEmailLog[]
  bulletin      BulletinApiLog[]
  sessions      Session[]
  smslog        SmsLog[]
  msgcnc        MsgCnC[]
  @@schema("msgmanager")
}

enum UserRole {
  STAFF
  STAFF_ADMIN
  ADMIN
  CHIEF_COUNCIL
  @@schema("msgmanager")
}

enum Department {
  FRONT_DESK
  FINANCE
  HOUSING
  OFFICE_ADMIN
  COUNCIL
  SOCIAL_ASSISTANCE
  @@schema("msgmanager")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  created      DateTime @default(now())
  updated       DateTime  @default(now()) @updatedAt
  access_token String?
  refresh_token String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@schema("msgmanager")
}

model SmsLog {
  id         String   @id @default(cuid())
  created    DateTime @default(now())
  updated       DateTime  @default(now()) @updatedAt
  message    String
  recipients String[]
  status     String
  messageIds String[]
  error      String?
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@schema("msgmanager")
}
model EmailLog {
  id          String   @id @default(cuid())
  created     DateTime @default(now())
  updated     DateTime  @default(now()) @updatedAt  
  subject     String
  message     String    @db.Text
  recipients  String[]
  status      String
  messageId   String?
  error       String?   @db.Text
  attachments Json?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@schema("msgmanager")
}

model StaffEmailLog {
  id          String   @id @default(cuid())
  created     DateTime @default(now())
  updated     DateTime @updatedAt
  subject     String
  message     String
  recipients  String[]
  status      String
  messageId   String?
  error       String?
  attachments Json?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@schema("msgmanager")
}
//this is the model to focus on. this will be the new bulletin model for the tcnbulletin model for vps app
model BulletinApiLog {
  id          String    @id @default(cuid())
  title       String
  subject     String
  poster_url  String
  category    Categories @default(CHIEFNCOUNCIL)
  userId      String
  User        User      @relation(fields: [userId], references: [id])
  created     DateTime   @default(now())
  updated     DateTime   @default(now()) @updatedAt
  @@schema("msgmanager")
}
model MsgCnC {
  id          String    @id @default(cuid())
  title       String
  content     String
  priority    String
  type        String    @default("notice")
  created     DateTime  @default(now())
  expiryDate  DateTime?
  isPublished Boolean   @default(false)
  userId      String
  User        User      @relation(fields: [userId], references: [id])
  date        DateTime
  time        DateTime
  location    String
  @@schema("msgmanager")
}

enum Categories{
  CHIEFNCOUNCIL
  HEALTH
  EDUCATION
  RECREATION
  EMPLOYMENT
  PROGRAM_EVENTS
  ANNOUNCEMENTS
  @@schema("msgmanager")
}
